user = int(input("Enter a number (Starting 0): "))

if user == 0:
    print("Monday")
elif user == 1:
    print("Tuesday")
elif user == 2:
    print("Wednesday")
elif user == 3:
    print("Thursday")
elif user == 4:
    print("Friday")
elif user == 5:
    print("Saturday")
elif user == 6:
    print("Sunday")
else:
    print("Invalid number input")
